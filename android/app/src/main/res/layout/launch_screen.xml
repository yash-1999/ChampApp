<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@mipmap/layer2" android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/l1" android:scaleType="centerCrop" />
             <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="BOXING"
            android:textColor="#FEFEFE"
            android:textSize="56dp"
            android:textStyle="bold"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="-10dp"
            android:includeFontPadding="false"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="BY TATVASOFT"
            android:letterSpacing="0.3"
            android:textColor="#FEFEFE"
            android:textSize="12dp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:typeface="sans" />
            
        </LinearLayout>
    
</RelativeLayout>